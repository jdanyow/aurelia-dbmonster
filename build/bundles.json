{
  "bundles": {
    "dist/app-build": {
      "includes": [
        "[*]",
        "*.html!text",
        "*.css!text"
      ],
      "options": {
        "inject": true,
        "minify": false
      }
    },
    "dist/aurelia": {
      "includes": [
        "aurelia-framework",
        "aurelia-bootstrapper",
        "aurelia/event-aggregator",
        "aurelia/history",
        "aurelia/history-browser",
        "aurelia/loader-default",
        "aurelia/logging-console",
        "aurelia/pal",
        "aurelia/pal-browser",
        "aurelia/router",
        "aurelia/templating",
        "aurelia/templating-binding",
        "aurelia/templating-resources",
        "aurelia/templating-router"
      ],
      "options": {
        "inject": true,
        "minify": true
      }
    }
  }
}
